#:kivy 1.8.0

<LoginScren>:
    username: usr
    password: psswd
    error: err

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: [0,5,0,5]
        spacing: 0
        Image:
            source: "logo.jpg"
            size_hint: [1,1]
        Label:
            id: err
            text: "Welcome, please enter your username and password to continue."
            font_size: 30
        GridLayout:
            size_hint: [1,2]
            cols = 2
            rows = 2
            Label:
                text: "Username"
                font_size: 30
            TextInput:
                id: usr
                multiline: False
            label:
                text: "Password"
                font_size: 30
            TextInput:
                id: passwd
                password: True
                multiline: False
        Button:
            size_hint: [1,2.5]
            text: 'Login'
            font_size: 20
            on_release: root.button_clicked()

